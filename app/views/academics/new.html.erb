<p><%= link_to 'Voltar', academics_path %></p>

<% if @academic.errors.any? %>
  <% @academic.errors.full_messages.each do |message| %>
      <p>O campo <%= t(message) %></p>
  <% end %>
<% end %>

<%= form_with model: @academic, local: true do |f| %>
  <%= f.label :institution, 'Instituicao' %>
  <%= f.text_field :institution %>
  <%= f.label :course, 'Curso' %>
  <%= f.text_field :course %>
  <%= f.label :start_date, 'Data de inicio' %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date, 'Data de conclusao' %>
  <%= f.date_field :end_date %>
  <%= f.label :status, 'Status' %>
  <%= f.select :status, [['Concluido', 'Concluido'], ['Em andamento', 'Em andamento']] %>
  <%= f.submit "Salvar" %>
<% end %>


 