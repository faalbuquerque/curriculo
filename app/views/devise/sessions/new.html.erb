<div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-lg-6">
    <h4 class="text-center">Login</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'px-4'}) do |f| %>
        <div class="field form-group">
       
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"Digite aqui seu e-mail" %>
        </div>
        <div class="field form-group">
       
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder:"Digite aqui sua senha" %>
        </div>
        <div class="form-group">
          <div class="form-check">
            <% if devise_mapping.rememberable? %>
              <div class="field actions ">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label input-group"%>
              </div>
            <% end %>
          </div>
        </div>
        <div class="actions">
          <%= f.submit "Entrar", class:"btn btn-primary" %>
        </div>
        <div class="dropdown-divider"></div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
